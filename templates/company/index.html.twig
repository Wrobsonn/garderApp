{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}Firma{% endblock %}

{% block content %}
    <div class="container">
        <div class="card mt-5">
            <div class="card-title">
                Nazwa firmy: {{ company.name }}
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="card col-6">
                        <div class="card-title">
                            <b>Pracownicy</b>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Imie</th>
                                    <th>Email</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for companyUser in companyUsers %}
                                    <tr>
                                        <td>{{ companyUser.username }}</td>
                                        <td>{{ companyUser.email }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card col-6">
                        <div class="card-title">
                            <b>Dodaj pracownika</b>
                        </div>
                        <div class="card-body">
                            {%  form_theme formNotCompanyUser 'bootstrap_5_layout.html.twig' %}
                            {{ form_start(formNotCompanyUser, {'attr': {'id': 'add_user_to_company_form'}}) }}
                            <b>Wybierz pracownika</b>
                            {{ form_start(formNotCompanyUser) }}
                            {{ form_widget(formNotCompanyUser.user_not_company, {'attr': {'class': 'form-control'}}) }}
                            <button class="btn btn-lg btn-info mt-2 mb-2" type="submit">
                                Dodaj pracownika
                            </button>
                            {{ form_end(formNotCompanyUser) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
